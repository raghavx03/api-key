# Database URL (SQLite for local development, PostgreSQL for production)
DATABASE_URL=sqlite:///./api_keys.db

# Encryption key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-encryption-key-here

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Your NVIDIA API key (optional - for NVIDIA key validation)
NVIDIA_API_KEY=your-nvidia-api-key-here

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://api-key-blush.vercel.app
